<div role="form">
<%= form_for(@message) do |f| %>

  
<% if @message.errors.present? %>

    <div class="alert alert-danger">
      
<%= alert %>

      <ul>
        
<% @message.errors.full_messages.each do |full_message| %>

          <li>
            
<%= full_message %>

          </li>
        
<% end %>
 
      </ul>
    </div>
  
<% end %>

<div class="form-group">
<label for="exampleInputEmail1">名前:</label><br>
            <%= f.text_field :name , :class =>"form-control", :placeholder => "名前を記入してください。" %>
</div>

<div class="form-group">
<label for="exampleInputEmail1">年齢:</label><br>
    <%= f.text_field :age , :class =>"form-control", :placeholder => "年齢を記入してください。" %>
</div>

<div class="form-group">
    <label for="exampleInputEmail1">内容:</label><br>
    <%= f.text_area :body , :class =>"form-control",:placeholder => "内容を記入してください。" %>
</div>

  
<%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>
</div>